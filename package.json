{
  "name": "queuestar-public",
  "version": "1.0.0",
  "private": false,
  "description": "AI-powered music blending platform that creates perfect playlists by combining music tastes between friends",
  "keywords": ["music", "ai", "playlist", "spotify", "apple-music", "nextjs", "typescript"],
  "author": "Vishnu K",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "docker:setup": "./scripts/docker-dev.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:db": "docker exec -it queuestar-db psql -U postgres queuestar_dev",
    "test": "vitest --config config/vitest.config.ts",
    "test:ui": "vitest --ui --config config/vitest.config.ts",
    "test:coverage": "vitest --coverage --config config/vitest.config.ts",
    "test:integration": "vitest tests/integration --run --config config/vitest.config.ts",
    "test:e2e": "playwright test --config config/playwright.config.ts",
    "test:e2e:ui": "playwright test --ui --config config/playwright.config.ts"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.59.0",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.33.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.445.0",
    "nanoid": "^5.1.5",
    "next": "^15.4.5",
    "node-jose": "^2.2.0",
    "openai": "^5.15.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^2.5.2",
    "zod": "^3.23.8",
    "zustand": "^5.0.0-rc.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/crypto-js": "^4.2.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitejs/plugin-react": "^4.3.2",
    "@vitest/coverage-v8": "^2.1.1",
    "@vitest/ui": "^2.1.1",
    "autoprefixer": "^10.4.21",
    "daisyui": "^4.12.10",
    "drizzle-kit": "^0.24.2",
    "eslint": "^8",
    "eslint-config-next": "14.2.14",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^25.0.1",
    "postcss": "^8",
    "postgres": "^3.4.4",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vitest": "^2.1.1"
  }
}
